{
  "name": "@pwabuilder/code-editor",
  "version": "0.0.1",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "run-p build:watch serve",
    "build:watch": "tsc --watch",
    "serve": "web-dev-server --node-resolve --open --watch",
    "preinstall": "node ../../scripts/setupDeps.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@codemirror/autocomplete": "^6.5.0",
    "@codemirror/commands": "^6.2.2",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/language": "^6.6.0",
    "@codemirror/lint": "^6.2.1",
    "@codemirror/state": "^6.2.0",
    "@codemirror/view": "^6.9.4",
    "@codemirror/search": "6.3.0",
    "@codemirror/lang-javascript": "^6.1.6",
    "codemirror": "^6.0.1",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@web/dev-server": "^0.4.6",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "endOfLine": "crlf",
    "bracketSpacing": true
  }
}
